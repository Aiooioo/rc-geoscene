{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/js",
    "jsx": "react",
    "lib": [
      "es2017",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "target": "es5"
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/**.test.tsx",
    "./src/**/**.test.ts",
    "./src/**/**.stories.ts",
    "./src/**/**.stories.tsx",
    "./src/**/examples/**"
  ]
}